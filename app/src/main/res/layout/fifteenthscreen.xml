<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- Back Icon -->
        <ImageView
            android:id="@+id/gotohome"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_cross"
            android:contentDescription="Back"
            android:padding="5dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Post"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <!-- Next Button -->
        <TextView
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="16sp"
            android:textColor="#000000"
            android:padding="5dp"/>
    </LinearLayout>

    <!-- Main Image View (To Be Replaced on Selection) -->
    <ImageView
        android:id="@+id/mainImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/main"
        android:layout_marginBottom="10dp"/>

    <!-- Select & Upload Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"/>
    </LinearLayout>

    <!-- Bottom Gallery Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Recents Dropdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recents"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingStart="10dp"/>

            <ImageView
                android:id="@+id/opencamera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_camera"
                android:tint="#000000"
                android:padding="5dp"/>
        </LinearLayout>

        <!-- Image Grid -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:padding="4dp">

                <!-- Image Thumbnails (Replace these with dynamic images) -->
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile1"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile2"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile3"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile4"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile5"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile6"
                    android:layout_margin="4dp"
                    android:scaleType="centerCrop"/>
            </GridLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
