<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Back Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back" />

        <!-- User Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Henry Benjamin"
            android:textSize="18dp"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingStart="8dp"
            android:textStyle="bold"/>

        <!-- Icons -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_call"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_vediocall" />
    </LinearLayout>

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"
            android:src="@drawable/sangi"
            android:clipToOutline="true" />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="View Profile"
            android:backgroundTint="#D3C7B8"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Chat Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp">

            <!-- Received Message -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="42dp"
                    android:src="@drawable/sangi"
                    android:background="@drawable/circle_background"
                    android:layout_marginEnd="8dp"
                    android:clipToOutline="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_message_left"
                    android:padding="12dp"
                    android:text="Hello, How are you?"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30"
                    android:textColor="#ACACAD"
                    android:textSize="12dp"
                    android:gravity="bottom" />
            </LinearLayout>



            <!-- Sent Message -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="220dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_message_right"
                    android:padding="12dp"
                    android:text="Hi, I am great. Wbu?"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:textColor="#ACACAD"
                    android:textSize="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Typing Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_typing_bar"
        android:layout_alignParentBottom="true">

        <!-- Typing EditText -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:hint="Typing..."
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textColorHint="#7A7A7A" />

        <!-- Send Button -->
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_send_button"
            android:padding="10dp"
            android:src="@drawable/ic_send" />
    </RelativeLayout>
</LinearLayout>
