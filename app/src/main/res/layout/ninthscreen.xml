<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DFDFDF"
    android:padding="16dp">

    <!-- User Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Henry Benjamin"
        android:textSize="25dp"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingStart="8dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10:32"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/henrybenjaman"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="350dp"
                    android:background="@drawable/bg_vediocall"
                    android:clipToOutline="true"
                    />

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_toolbar_background"
        android:padding="10dp"
        android:gravity="center"
        android:layout_margin="10dp">

        <!-- Options Button -->
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/circular_button_background"
            android:src="@drawable/ic_more"
            android:tint="#FFFFFF"
            android:contentDescription="More Options" />

        <!-- Video Call Button -->
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/circular_button_background"
            android:src="@drawable/ic_vediocall"
            android:tint="#FFFFFF"
            android:contentDescription="Video Call" />

        <!-- Speaker Button -->
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/circular_button_background"
            android:src="@drawable/ic_speaker"
            android:tint="#FFFFFF"
            android:contentDescription="Speaker" />

        <!-- Mute Button -->
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/circular_button_background"
            android:src="@drawable/ic_mute"
            android:tint="#FFFFFF"
            android:contentDescription="Mute"
            />

        <!-- End Call Button -->
        <ImageButton
            android:id="@+id/endcall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:src="@drawable/img"
            android:background="@null"
            android:scaleType="centerInside"
            android:contentDescription="Icon Button" />

    </LinearLayout>

</LinearLayout>
